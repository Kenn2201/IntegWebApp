<%- include('partials/header'); -%>

<div class="container">
  <div class="d-flex mt-3">
    <a href="/editusers" button type="submit" class="btn btn-primary">Edit Users</a>
  </div>

  <!-- rest of the code -->
</div>

<div class="container">
  <h2>List of Active Users</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Role</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% users.filter(user => user.status === 'active' && user.isUserDeleted !== 'true').forEach(user => { %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
          <td><%= user.role %></td>
          <td><%= user.status %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <h2></h2>
  <h2>List of Disabled Users</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Role</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% users.filter(user => user.status === 'disabled' && user.isUserDeleted !== 'true').forEach(user => { %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
          <td><%= user.role %></td>
          <td><%= user.status %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

